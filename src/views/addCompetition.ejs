<!DOCTYPE html>
<html lang="en">

<% include ../views/partials/head.ejs %>

    <body>

        <% include ../views/partials/header.ejs %>

            <div id="masthead">
                <div class="container">
                    <div class="row">
                        <div class="col-md-7">
                            <h1>eCompetition
          <p class="lead"></p>
        </h1>
                        </div>

                    </div>
                </div>
                <!-- /cont -->
            </div>


            <div class="container">
                <div class="row">

                    <div class="col-md-12">

                        <div class="panel">
                            <div class="panel-body">

                                <div class="row">
                                    <div class="col-xs-6">
                                        <!--panel for creating competition-->
                                        <div class="panel">
                                            <div class="panel-body">
                                                <form class="form" action="/Competitions" method="POST">
                                                    <div class="form-group">
                                                        <label for="nameField">Competition Name</label>
                                                        <input class="form-control" type="text" name="event_name" id="nameField" placeholder="Competition Name" required>
                                                    </div>
                                                    <div class="form-group">
                                                        <label for="categoryField">Category</label>
                                                        <input class="form-control" type="text" name="category" id="categoryField" placeholder="Category Name" required>
                                                    </div>

                                                    <div class="form-group">
                                                        <label for="startDateField">StartDate</label>
                                                        <input class="form-control" type="text" name="startDate" id="startDateField" placeholder="02-06-2016" required>
                                                    </div>

                                                    <div class="form-group">
                                                        <label for="endDateField">End Date</label>
                                                        <input class="form-control" type="text" name="endDate" ,id="endDateField" placeholder="02-06-2016" required>
                                                    </div>
                                                    <div class="form-group">
                                                        <label for="imgField">Image Url</label>
                                                        <input class="form-control" type="text" name="imgUrl" ,id="imgField" placeholder="Post Image Url" required>
                                                    </div>
                                                    <div class="form-group">
                                                        <label for="comment">Description:</label>
                                                        <textarea class="form-control" rows="6" id="comment" name="desc"></textarea>
                                                    </div>
                                                    <div class="form-group">
                                                        <label for="sel1">Judges</label>
                                                        <select class="form-control" id="sel1" aria-placeholder="Select Judge" required>
                                                  <% for(var i =0; i<judges.length; i++) {%>
                                                   <!--<option><%=judges[i].local.name %></option>-->
                                                   <option><%=judges[i].local.name%></option>

                                                    <% }%>
                                                    </select>


                                                    </div>


                                                    <!--<label for="exampleInputFile">File input</label>-->
                                                    <!--<input type="file" id="exampleInputFile" name="projectimage">-->

                                                    <input type="submit" value="Add" class="btn btn-theme">

                                                </form>

                                            </div>
                                        </div>
                                        <!--/Panel-->



                                    </div>


                                </div>
                            </div>

                        </div>

                        <hr>



                        <% include ../views/partials/footer.ejs %>
